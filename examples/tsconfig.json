{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "target": "ES2015",
    "lib": ["dom", "es2016"],
    "declaration": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "declarationMap": true,
    "noFallthroughCasesInSwitch": true,
    "strictFunctionTypes": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "examples/*" : ["./*"],
    },
  },
  "exclude": ["node_modules"],
  "typeAcquisition": {
    "enable": true,
    "exclude": ["bn.js"]
  }
}
